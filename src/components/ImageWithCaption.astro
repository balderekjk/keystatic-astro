---
const { src, alt, caption, float, width, height } = Astro.props;
let marginClass = 'mx-auto';
let floatClass = 'sm:float-none';
switch (float) {
  case 'left':
    marginClass = 'sm:mr-6';
    floatClass = 'sm:float-left';
    break;
  case 'right':
    marginClass = 'sm:ml-6';
    floatClass = 'sm:float-right';
}
---

<figure
  class=`text-center ${floatClass} float-none sm:max-w-[50%] ${marginClass} mx-0 mt-0 mb-4 [&+*+*]:clear-both`
>
  <img
    src={src}
    alt={alt}
    width={width}
    height={height}
    class="max-w-[100%] h-auto"
  />
  <figcaption>{caption}</figcaption>
</figure>